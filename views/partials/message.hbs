{{#if success_msg}}
  <div class="row justify-content-center align-items-center">
    <div class="col-4 alert alert-success alert-dismissible fade show" role="alert">
      {{ success_msg }}
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
{{/if}}

{{#if warning_msg}}
<div class="row justify-content-center align-items-center">
  <div class="col-4 alert alert-warning alert-dismissible fade show" role="alert">
    {{ warning_msg }}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
</div>
{{/if}}

{{#if errors}}
  {{#each errors}}
    <div class="row justify-content-center align-items-center">
      <div class="col-4 alert alert-danger alert-dismissible fade show" role="alert">
        {{ this.message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    </div>
  {{/each}}
{{/if}}